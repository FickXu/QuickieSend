.filter-list {
  height: 60px;
  margin-top: 50px;
  padding: 0 15px;
}
.filter-list .btn-filter {
  justify-content: space-around;
}
.filter-list .split {
  min-width: 2px;
  max-width: 2px;
  height: 15px;
  background-color: #f7f7f7;
  border-radius: 5px;
}
.filter-list .cuIcon-sort {
  line-height: 20px;
  font-size: 22px;
}
.scroll-page {
  background-color: #fff;
}
.filter-container {
  flex-basis: 80%;
  background-color: #fff;
}
.filter-container .title {
  height: 25px;
  padding: 0 15px;
  font-size: 16px;
  font-family: PingFang SC;
  font-weight: 700;
  color: #111111;
  height: 36px;
  line-height: 36px;
  text-align: left;
}
.filter-container .ipt-box {
  padding: 0 15px;
  display: flex;
  justify-content: space-around;
  align-items: center;
  height: 44px;
  text-align: center;
}
.filter-container .ipt-box .ipt {
  flex-basis: 45%;
  background-color: #f7f7f7;
  height: inherit;
}
.filter-container .ipt-box .split {
  flex-basis: 15px;
  height: 2px;
  background-color: #666666;
  border-radius: 5px;
}
.filter-container .brand-box {
  text-align: center;
  padding: 0 15px;
}
.filter-container .tag-list {
  display: inline-flex;
  justify-content: left;
  flex-wrap: wrap;
}
.filter-container .tag-list .qs-tag {
  height: 30px;
  line-height: 30px;
  background: #ffffff;
  border: 1px solid #e9e9e9;
  border-radius: 2px;
  padding: 0 5px;
  margin-bottom: 10px;
}
.filter-container .tag-list .active {
  border: 1px solid #22BFB7;
  color: #22BFB7;
}
.list-order-none {
  text-align: center;
  color: #888888;
  background-color: #fff;
  padding: 0 20rpx 30rpx 20rpx;
  margin: 10px 30rpx;
  border-radius: 30rpx;
}
.list-order-none image {
  height: 600rpx;
}
