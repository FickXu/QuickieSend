.commodity-column {
  -webkit-column-count: 2;
  -webkit-column-gap: 2;
  column-count: 2;
  column-gap: 20rpx;
  padding-bottom: 20rpx;
}
.commodity-column .commodity-item {
  break-inside: avoid;
  /*避免在元素内部插入分页符*/
  box-sizing: border-box;
  max-height: 500rpx;
  background: #ffffff;
  box-shadow: 0rpx 6rpx 12rpx rgba(199, 199, 199, 0.16);
  border-radius: 20rpx;
  overflow: hidden;
  margin-bottom: 20rpx;
  padding-bottom: 20rpx;
}
.commodity-column .commodity-item .img {
  width: 100%;
  height: 314rpx;
  overflow: hidden;
}
.commodity-column .commodity-item .img image {
  width: 100%;
  height: 100%;
  position: inherit;
}
.commodity-column .commodity-item .desc {
  margin: 18rpx;
}
.commodity-column .commodity-item .desc .title {
  font-size: 28rpx;
  font-family: PingFang SC;
  font-weight: 500;
  line-height: 18px;
  color: #333333;
}
.commodity-row .commodity-count {
  color: #666666;
  font-size: 14px;
  font-weight: 500;
}
.commodity-row .commodity-item {
  width: 100%;
  margin-bottom: 20rpx;
  overflow: hidden;
  display: inline-flex;
  align-items: center;
  border-bottom: 1px solid #f7f7f7;
  padding: 15px 15px;
}
.commodity-row .commodity-img {
  min-width: 100px;
  max-width: 100px;
  height: 100px;
  border: 1px solid #f7f7f7;
  /* padding: 5px; */
  border-radius: 5px;
}
.commodity-row .commodity-info .title {
  font-size: 13px;
  font-family: PingFang SC;
  font-weight: 500;
  color: #333333;
}
.commodity-row .commodity-info .price {
  display: flex;
  justify-content: space-between;
  align-items: center;
}
