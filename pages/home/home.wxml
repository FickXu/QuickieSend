<!--pages/home/home.wxml-->
<view class="home-page" wx:if="{{PageCur == 'home'}}">
  <view class="top-area">
    <cu-custom>
      <view slot="content" class="bold">{{ title }}</view>
    </cu-custom>
  
    <!-- 搜索组件 -->
    <view class="search-box">
      <view class="location cuIcon-location text-white" bindtap="openHospitalListPage">
        <text class="label">定位</text>
      </view>
      <view class="search">
        <view class="cuIcon-search"></view>
        <input type="text" class="search" placeholder="{{searchPlaceholder}}"/>
      </view>
      <view class="shop-car cuIcon-cart text-white" bindtap="openShopingCartPage"></view>
    </view>
  
  </view>
  
  <!-- 附近店铺信息 -->
  <view class="near-shop-info">
    <view class="shop-img">
      <image class="img" src="{{shopDetails.imgPath}}" />
    </view>
    <view class="shop-desc">
      <view class="title">{{shopDetails.shopName}}</view>
      <view class="title1">{{shopDetails.areaName}}</view>
    </view>
    <!-- <view class="attr-item">
      <view class="value orange">1000</view>
      <view class="label">粉丝数</view>
    </view> -->
    <view class="attr-item">
      <view class="value  ">3.9万</view>
      <view class="label">购买指数</view>
    </view>
  </view>
  
  <scroll-view
    scroll-y class="scrollPage" 
    refresher-enabled="{{true}}"
    enable-flex="{{true}}" 
    bindrefresherpulling="bindrefresherpulling"
    >
  
    <!-- 店铺热门分类 -->
    <view class="hot-category">
      <view
        class="item {{categoryIndex == index ? 'active' : ''}}"
        data-id="{{item.id}}"
        wx:for="{{hotCategoryList}}"
        wx:key="index"
        bindtap="chooseCategory"
        >
        {{item.name}}
      </view>
    </view>
  
    <!-- 商品banner -->
    <view class="commodity-banner">
      <view class="icon-banner">
        <image src="../images/new-commodity.png" mode="aspectFill" />
      </view>
    </view>
    
    <!-- 商品列表 -->
    <commodity-list info="{{commodityList}}"></commodity-list>
    
  </scroll-view>
</view>

<!-- 分类列表 -->
<category-list wx:if="{{PageCur == 'category-list'}}"></category-list>

<!-- 个人中心 -->
<person-center wx:if="{{PageCur == 'person-center'}}"></person-center>

<view class="cu-modal {{isShow ? 'show':''}}">
  <view class="modal-body">
    <view class="action" bindtap="hideModal">
      <text class="cuIcon-close "></text>
    </view>
    <image src="http://m.quickssend.com/file/first-relief.png" />
    <view class="text-white bold fz-14 label">
      <text class="fz-30">{{firstOrderRewardNewAamount}}</text>元
      <text decode="{{true}}">&ensp;有效期{{firstOrderRewardNewValidity}}天</text>
    </view>
  </view>
