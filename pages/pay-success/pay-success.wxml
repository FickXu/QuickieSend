<!-- 顶部导航 -->
<cu-custom bgColor="bg-white" isBack="{{true}}">
  <view slot="content" class="bold">{{ title }}</view>
</cu-custom>

<scroll-view
  class="scroll-page"
  scroll-y
  scroll-with-animation
  >
  <view class="bg-white mt-15 pay-body">
    <view class="pay-status padding-top">
      <view class="text-center mt-20"><image class="icon-success" src="./img/gou.png" /></view>
      <view class="text-black fz-14 text-center mt-10">您已支付成功</view>
    </view>
    <view class="coupon">
      <canvas
        canvas-id="canvas1"
        disable-scroll="{{true}}"
        style="width:100%;height:100%;"
        ></canvas>
    </view>
    <view class="coupon">
      <canvas
        canvas-id="canvas2"
        disable-scroll="{{true}}"
        style="width:100%;height:100%;"
        bindtouchstart="bindtouchstart"
        bindtouchmove="bindtouchmove"
        bindtouchend="bindtouchend"
        bindlongtap="bindlongtap"
        ></canvas>
    </view>
  </view>
</scroll-view>