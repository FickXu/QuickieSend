.order-page .scan {
  width: 198rpx;
  height: 198rpx;
  background: #ffffff;
  border: 1px solid #22bfb7;
  border-radius: 11px;
  padding: 20rpx;
}
.order-page .tabs-order {
  background: #ffffff;
}
.order-page .list-order {
  margin-top: 20rpx;
  margin-bottom: 20rpx;
}
.order-page .list-order-item {
  background-color: #fff;
  padding: 0 20rpx 30rpx 20rpx;
  margin: 0 30rpx;
  border-radius: 30rpx;
}
.order-page .list-order-item:not(:first-child) {
  margin-top: 20rpx;
}
.order-page .list-order-item-header {
  line-height: 70rpx;
  font-size: 28rpx;
  border-bottom: 1px solid #e2e2e2;
  padding-top: 40rpx;
}
.order-page .list-order-item-header .tag {
  color: #883c41;
}
.order-page .list-order-item-header .order-number {
  color: #3d3d3d;
}
.order-page .list-order-item-header .buy-user {
  display: flex;
  justify-content: space-between;
  width: 100%;
}
.order-page .list-order-item-header .order-status {
  padding: 10rpx 20rpx;
  color: #ffffff;
  font-size: 28rpx;
  background-color: #F55858;
  text-align: center;
  border-radius: 100rpx;
}
.order-page .list-order-item .table-header {
  display: flex;
  justify-content: space-between;
  align-items: center;
  width: 100%;
  margin-top: 30rpx;
}
.order-page .list-order-item-body {
  width: 100%;
  display: inline-flex;
}
.order-page .list-order-item-body .shop-view {
  min-width: 200rpx;
  max-width: 200rpx;
  min-height: 200rpx;
  max-height: 200rpx;
}
.order-page .list-order-item-body .shop-view .img {
  width: 100%;
  height: 100%;
  padding: 5px;
  border-radius: 5px;
  border: 1px solid #f7f7f7;
}
.order-page .list-order-item-body .shop-attr {
  width: 100%;
  margin-left: 48rpx;
}
.order-page .list-order-item-body .shop-attr-shape {
  color: #3d3d3d;
}
.order-page .list-order-item-body .shop-attr-specs {
  color: #b3b3b3;
  margin-top: 10rpx;
}
.order-page .list-order-item-body .shop-attr-total {
  width: 100%;
  margin-top: 10rpx;
}
.order-page .list-order-item-footer {
  margin-top: 24rpx;
}
.order-page .list-order-item-footer .order-mark {
  color: #3d3d3d;
}
.order-page .list-order-item-footer .order-total {
  color: #3d3d3d;
  text-align: right;
  padding-top: 30rpx;
  margin-top: 10px;
  border-top: 1px solid #e2e2e2;
}
.order-page .list-order-item-footer .btn-delete-order {
  overflow: hidden;
  margin-top: 20rpx;
}
.order-page .list-order-item-footer .btn-delete-order .button {
  float: right;
  font-size: 28rpx;
  border: 1px solid #22BFB7;
  color: #22BFB7;
  background-color: transparent;
  border-radius: 50rpx;
  text-align: center;
  width: 164rpx;
  height: 54rpx;
  line-height: 54rpx;
  padding: 0;
  box-sizing: content-box;
}
.order-page .list-order-item-footer .btn-delete-order .button::after {
  border: none;
}
.order-page .list-order-none {
  text-align: center;
  color: #888888;
  background-color: #fff;
  padding: 0 20rpx 30rpx 20rpx;
  margin: 10px 30rpx;
  border-radius: 30rpx;
}
