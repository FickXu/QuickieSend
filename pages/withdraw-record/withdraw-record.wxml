<!--pages/consumer-details/consumer-details.wxml-->
<cu-custom bgColor="bg-white" isBack="{{true}}">
	<view slot="content" class="bold text-black">{{ title }}</view>
</cu-custom>

<!-- 提现记录 -->
<view class="margin-top-sm bg-white" wx:if="{{list.length>0}}">
  <view class="padding qs-border-bottom flex justify-between flex-align-center" wx:for="{{list}}">
    <view>
      <view class="text-black fz-14">{{item.title}}<text decode="{{true}}"> </text></view>
      <view class="text-gray fz-12">{{item.createDate}}</view>
    </view>
    <view>
      <view class="text-gray fz-12 text-right">{{item.withdrawalStatue == 0 ? '待审' : (itme.status == 1 ? '审核中' : '提现失败')}}</view>
      <view class="mt-5 price fz-14 text-right">{{item.amount}}</view>
    </view>
  </view>
</view>
<view wx:else class="list-order-none">
    <image class="padding-xl" src="https://yykjoss.oss-cn-shenzhen.aliyuncs.com/wechaapplet/basic/no-data.png" />
    <view>抱歉，您还没有提现记录</view>
  </view>
